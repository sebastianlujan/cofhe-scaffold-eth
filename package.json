{
	"name": "se-2",
	"version": "0.0.1",
	"private": true,
	"workspaces": {
		"packages": [
			"packages/hardhat",
			"packages/nextjs",
			"packages/fisher"
		]
	},
	"bin": {
		"evvm": "./cli/evvm.js"
	},
	"scripts": {
		"evvm": "node cli/evvm.js",
		"dev": "node cli/evvm.js dev",
		"dev:chain": "yarn workspace @se-2/hardhat chain",
		"dev:deploy": "yarn workspace @se-2/hardhat deploy:local",
		"dev:relayer": "yarn workspace @evvm/fisher start:dev",
		"dev:frontend": "yarn workspace @se-2/nextjs dev",
		"dev:all": "node cli/evvm.js all",
		"dev:status": "node cli/evvm.js status",
		"account": "yarn workspace @se-2/hardhat account",
		"account:generate": "yarn workspace @se-2/hardhat account:generate",
		"account:import": "yarn workspace @se-2/hardhat account:import",
		"account:reveal-pk": "yarn workspace @se-2/hardhat account:reveal-pk",
		"compile": "yarn workspace @se-2/hardhat compile",
		"deploy": "yarn workspace @se-2/hardhat deploy",
		"test": "yarn workspace @se-2/hardhat test",
		"format": "yarn workspace @se-2/nextjs format && yarn workspace @se-2/hardhat format",
		"lint": "yarn workspace @se-2/nextjs lint && yarn workspace @se-2/hardhat lint",
		"build": "yarn workspace @se-2/nextjs build",
		"postinstall": "husky install",
		"next:lint": "yarn workspace @se-2/nextjs lint",
		"next:check-types": "yarn workspace @se-2/nextjs check-types"
	},
	"devDependencies": {
		"husky": "~9.1.6",
		"lint-staged": "~13.2.2"
	},
	"packageManager": "yarn@3.2.3",
	"engines": {
		"node": ">=20.18.3"
	},
	"dependencies": {
		"@nomicfoundation/hardhat-ethers": "^3.0.8",
		"@zama-fhe/relayer-sdk": "^0.3.0-5",
		"ethers": "^6.15.0",
		"hardhat": "^2.22.10"
	},
	"resolutions": {
		"@noble/hashes": "1.7.1",
		"@noble/curves": "1.8.1",
		"@scure/bip32": "1.6.2",
		"@scure/bip39": "1.5.4",
		"@scure/base": "1.2.4"
	}
}
